# Core Configuration
NODE_ENV=development
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# External APIs
OPENAI_API_KEY=sk-your-openai-api-key
PROKERALA_API_URL=https://api.prokerala.com/v2
PROKERALA_API_KEY=your-pokhrel-api-key
PROKERALA_API_SECRET=your-pokhrel-api-secret

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/zstro_ai
DB_REPLICA_URL=postgresql://user:password@localhost:5432/zstro_ai_replica
READ_PREFER_REPLICA=false

# Cache
REDIS_URL=redis://localhost:6379

# Security & Encryption
PII_ENC_KEY=your-32-byte-base64-encoded-key
JWT_SECRET=your-jwt-secret-here

# Privacy & Data Retention
PRIVACY_RETENTION_DAYS=365

# Payment Gateways
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret
KHALTI_SECRET=test_your-khalti-secret
ESEWA_SECRET=your-esewa-secret
CONNECTIPS_SECRET=your-connectips-secret

# Feature Flags
FF_PWA=true
FF_STRIPE=true
FF_I18N=true
FF_ANALYTICS=true
FF_ADVANCED_CHARTS=false
FF_VOICE_INPUT=false
FF_REAL_TIME_CHAT=true
FF_BETA=false

# Monitoring & Analytics
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn-here

# Coin System
COIN_TOPUP_IDEMPOTENCY_WINDOW=600

# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@zstro.ai

# Geocoding (Optional - uses OpenStreetMap by default)
GEOCODING_API_KEY=your-geocoding-api-key
GEOCODING_PROVIDER=openstreetmap

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10

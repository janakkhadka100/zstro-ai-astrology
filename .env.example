# ZSTRO AI ASTROLOGY - Environment Variables
# Copy this file to .env.local and fill in your values

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/zstro_astrology"

# NextAuth.js
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# Prokerala API (Optional - app works with mock data if not provided)
PROKERALA_API_KEY="your-prokerala-api-key"
PROKERALA_API_SECRET="your-prokerala-api-secret"

# Redis (Optional - app uses in-memory cache if not provided)
REDIS_URL="redis://localhost:6379"

# Vercel Blob Storage (Optional)
BLOB_READ_WRITE_TOKEN="your-blob-token"

# Email (Optional)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"

# Push Notifications (Optional)
VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"

# Development
NEXT_PUBLIC_USE_MOCK_DATA="true"
NODE_ENV="development"

# Production
# NEXT_PUBLIC_USE_MOCK_DATA="false"
# NODE_ENV="production"
